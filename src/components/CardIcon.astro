---
interface Props {
	title: string;
	href: string;
	icon: any;
}

const { href, title, icon } = Astro.props;
---

<div class="link-card">
	<a href={href} title={title} >
		<img src={icon}>
	</a>
</div>
<style>
	.link-card {
		list-style: none;
		display: flex;
		padding: 1px;
		background-color: #3a695f;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(18, 214, 116, 0.1);
		align-items: center;
		vertical-align: middle;
		height: 50px;
		width: 50px; 
		align-items: center;
  		justify-content: center;
	}
	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		border-radius: 8px;
		background-color: #3a695f;
		opacity: 0.8;
		display:flex;
		align-items: center;
  		justify-content: center;
	}
	.link-card > a > img {
		width: 40px;
		height: 40px; 
		text-decoration: none;
		background-color: #3a695f;
		opacity: 0.8;
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-light));
	}
</style>
